<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_fi_arrow_left"/>

    <TextView
        android:id="@+id/infoAkun_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="248dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Lengkapi Info Akun"
        android:textColor="@color/NEUTRAL05"
        android:textSize="14sp"
        android:lineSpacingExtra="-1sp"/>

    <ImageView
        android:id="@+id/foto_akun"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/infoAkun_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_field_solid"
        android:backgroundTint="@color/PURPLE01"
        android:src="@drawable/ic_fi_camera"
        android:padding="36dp"/>

    <TextView
        android:id="@+id/nama_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foto_akun"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:gravity="top"
        android:text="Nama*"
        android:textColor="@color/NEUTRAL05"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_reguler"
        />

    <EditText
        android:id="@+id/nama_et"
        app:layout_constraintStart_toStartOf="@id/nama_tv"
        app:layout_constraintTop_toBottomOf="@id/nama_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:paddingLeft="16dp"
        android:textSize="14dp"
        android:textColorHint="@color/NEUTRAL03"
        android:background="@drawable/rounded_field_stroke"
        android:hint="Nama"/>

    <TextView
        android:id="@+id/kota_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_reguler"
        android:gravity="top"
        android:text="Kota*"
        android:textColor="@color/NEUTRAL05"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nama_et" />

    <Spinner
        android:id="@+id/kota_spinner"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="@id/kota_tv"
        app:layout_constraintTop_toBottomOf="@id/kota_tv"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/style_spinner"
        android:popupBackground="@drawable/rounded_field_solid"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/alamat_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_reguler"
        android:gravity="top"
        android:text="Alamat*"
        android:textColor="@color/NEUTRAL05"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kota_spinner" />

    <EditText
        android:id="@+id/alamat_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alamat_tv"
        android:gravity="top|left"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:textSize="14dp"
        android:textColorHint="@color/NEUTRAL03"
        android:background="@drawable/rounded_field_stroke"
        android:hint="Contoh: Jalan Ikan Paus 69"/>

    <TextView
        android:id="@+id/nomorHp_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alamat_et"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:gravity="top"
        android:text="Nomor Handphone*"
        android:textColor="@color/NEUTRAL05"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_reguler"
        />

    <EditText
        android:id="@+id/nomorHp_et"
        app:layout_constraintStart_toStartOf="@id/nomorHp_tv"
        app:layout_constraintTop_toBottomOf="@id/nomorHp_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:paddingLeft="16dp"
        android:textSize="14dp"
        android:textColorHint="@color/NEUTRAL03"
        android:background="@drawable/rounded_field_stroke"
        android:hint="contoh: +628123456789"/>

    <TextView
        android:id="@+id/simpanProfile_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="Simpan"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/NEUTRAL01"
        android:background="@drawable/btn_primary_normal_default"/>

</androidx.constraintlayout.widget.ConstraintLayout>