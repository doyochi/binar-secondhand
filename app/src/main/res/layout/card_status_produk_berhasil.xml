<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_pembeli"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back_white"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/line_devider">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yeay kamu berhasil mendapat harga yang sesuai"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textColor="@color/NEUTRAL05"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segera hubungi pembeli melalui whatsapp untuk transaksi selanjutnya"
            android:fontFamily="@font/poppins_reguler"
            android:textSize="14sp"
            android:textColor="@color/NEUTRAL05"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--penawar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/img_penawar"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintLeft_toLeftOf="parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/img_default_pembeli"/>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:id="@+id/id_text_penawar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="15dp"
                                app:layout_constraintLeft_toRightOf="@id/img_penawar"
                                app:layout_constraintRight_toRightOf="parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nama Pembeli"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="14sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kota"
                                    android:fontFamily="@font/poppins_reguler"
                                    android:textColor="@color/NEUTRAL03"
                                    android:textSize="10sp"/>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--barang-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_barang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="15dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_img_barang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_ditawar"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/vg_toptext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/card_img_barang"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginHorizontal="15dp">
                        <TextView
                            android:id="@+id/txt_penawaran1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Penawaran Produk"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_reguler"
                            android:textColor="@color/NEUTRAL03"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/txt_penawaran2"/>

                        <TextView
                            android:id="@+id/txt_penawaran2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Apr, 1404"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_reguler"
                            android:textColor="@color/NEUTRAL03"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/txt_penawaran1"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/card_img_barang"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vg_toptext"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jam Tangan Casio"
                            android:fontFamily="@font/poppins_reguler"
                            android:textSize="14sp"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 250.000"
                            android:fontFamily="@font/poppins_reguler"
                            android:textSize="14sp"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ditawar Rp. 200.000"
                            android:fontFamily="@font/poppins_reguler"
                            android:textSize="14sp"
                            android:textColor="@color/NEUTRAL05"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/NEUTRAL01"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_primary_normal_default"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>