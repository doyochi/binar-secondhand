<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product_list"
        android:layout_width="156dp"
        android:layout_height="206dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- xml if data is empty, a view group for add another product-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/rounded_field_stroke_dash">

                <ImageView
                    android:id="@+id/iv_empty_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_fi_plus" />

                <TextView
                    android:id="@+id/tv_empty_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Produk"
                    android:fontFamily="@font/poppins_reguler"
                    android:textSize="12sp"
                    android:textColor="@color/NEUTRAL03"
                    app:layout_constraintTop_toBottomOf="@id/iv_empty_data"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Item List on RecyclerView if the data is not empty -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image_product"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/iv_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:src="@tools:sample/avatars"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cv_image_product"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Jam Tangan Casio"
                    android:fontFamily="@font/poppins_reguler"
                    android:gravity="top"
                    android:textColor="@color/NEUTRAL05"/>

                <TextView
                    android:id="@+id/tv_product_type"
                    android:layout_width="140dp"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_product"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"
                    android:text="Aksesoris"
                    android:fontFamily="@font/poppins_reguler"
                    android:textSize="11sp"
                    android:textColor="@color/NEUTRAL03"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:text="Rp 250.000"
                    android:fontFamily="@font/poppins_reguler"
                    android:textSize="14sp"
                    android:textColor="@color/NEUTRAL05"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
