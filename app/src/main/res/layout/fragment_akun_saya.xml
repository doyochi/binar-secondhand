<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.AkunSayaFragment">
    
    <TextView
        android:id="@+id/tv_akun_saya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akun Saya"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/ib_seller_photo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_fi_camera"
        android:background="@drawable/rounded_field_stroke"
        app:layout_constraintTop_toBottomOf="@id/tv_akun_saya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/PURPLE01"/>

    <!-- Edit Acc-->

    <ImageView
        android:id="@+id/iv_edit_acc"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_fi_edit_3"
        app:layout_constraintTop_toBottomOf="@id/ib_seller_photo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/tv_edit_acc"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:text="Ubah Akun"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ib_seller_photo"
        app:layout_constraintStart_toEndOf="@id/iv_edit_acc"
        android:layout_marginTop="34dp"
        android:layout_marginStart="15dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"/>

    <View
        android:id="@+id/line_edit_acc"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_acc"
        android:background="#E5E5E5"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <!-- Settings -->

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_fi_settings"
        app:layout_constraintTop_toBottomOf="@id/line_edit_acc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:text="Pengaturan Akun"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/line_edit_acc"
        app:layout_constraintStart_toEndOf="@id/iv_edit_acc"
        android:layout_marginTop="18dp"
        android:layout_marginStart="15dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"/>

    <View
        android:id="@+id/line_setting"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting"
        android:background="#E5E5E5"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <!-- Keuar -->

    <ImageView
        android:id="@+id/iv_logout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_fi_log_out"
        app:layout_constraintTop_toBottomOf="@id/line_setting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/line_setting"
        app:layout_constraintStart_toEndOf="@id/iv_logout"
        android:layout_marginTop="18dp"
        android:layout_marginStart="15dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"/>

    <View
        android:id="@+id/line_logout"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_logout"
        android:background="#E5E5E5"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_version_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Version 1.0.0"
        android:fontFamily="@font/poppins_reguler"
        android:textSize="12sp"
        android:textColor="@color/NEUTRAL03"
        android:layout_marginTop="16dp"/>

    <!--footer-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_notification">
        <include layout="@layout/layout_navbar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>